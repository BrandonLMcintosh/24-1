{% extends "root/base.html.j2" %}

{% block form %}{% endblock form %}

{% block get %}

<div class="container text-center">
    <div class="row">

        <img src="{{pet.photo_url}}" alt="Pet Photo" class="col-md-4">

        <div class="col-md-4">

            <p><strong>Name: </strong>{{pet.name}}</p> 
            <p><strong>Species: </strong>{{pet.species}}</p>
            <p><strong>Age: </strong>{{pet.age}}</p>
            <p><strong>Notes: </strong>{{pet.notes}}</p>
            <p><strong>Available: </strong>{% if pet.available %} Yes {% else %} No {% endif %}</p>

        </div>
        <div class="col-md-4">
            <div><a href="/{{pet.id}}/adopt" class="btn btn-success">Adopt</a></div>
            <div><a href="/{{pet.id}}/edit" class="btn btn-warning">Edit</a></div>
            <div><a href="/{{pet.id}}/delete" class="btn btn-danger">Delete</a></div>
            <div><a href="{{request.referrer}}" class="btn btn-primary">Back</a></div>
        </div>
    </div>

</div>

{% endblock get %}