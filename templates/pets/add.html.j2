{% extends "root/base.html.j2" %}

{% block inputs %}

    {{ form.hidden_tag() }}
    
    {% for field in form 
        if field.widget.input_type != 'hidden' %}

        <div>
        
            {{field.label}}
            {{field}}

            {% for error in field.errors %}
                {{error}}
            {% endfor %}

        </div>
        
    {% endfor %}

    <input type="submit" value="Add" class="btn btn-success">

{% endblock inputs %}

